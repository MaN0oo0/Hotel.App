
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Layout/LoginLayout.cshtml";
}

@model ForgetPasswordVM
<img src="../assets/images/brand/logo.png" class="header-brand-img mobile-view mb-4" alt="Aronox logo">
<img src="../assets/images/brand/logo-dark.png" class="header-brand-img mobile dark-view mb-4" alt="Aronox logo">
<div class="col-xl-7 col-lg-6 col-md-12">
    <img src="../assets/images/svgs/forgot.svg" class="construction-img mt-7 h-300  " alt="">
</div>
<div class="col-xl-5  col-lg-6 col-md-12 ">
    <div class="col-lg-11 ">
        <img src="../assets/images/brand/logo.png" class="header-brand-img light-view mb-4" alt="Aronox logo">
        <img src="../assets/images/brand/logo-dark.png" class="header-brand-img dark-view mb-4" alt="Aronox logo">
        <div class="wrapper wrapper2">
            <form asp-controller="Account" asp-action="ForgetPassword" class="card-body" tabindex="500">
                <h2 class="mb-1 font-weight-semibold">Forgot Password</h2>
                <p class="mb-6">Sign In to your account</p>
                <div class="input-group mb-3">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input type="text" class="form-control" placeholder="EmailId" asp-for="Email">
                </div>
                <span asp-validation-for="Email"></span>
                <div class="row mt-5">
                    <div class="col-12"> <button type="submit" class="btn btn-primary btn-block">Send</button> </div>
                </div>
                <div class="text-center text-muted mt-3 ">
                    Forget it, <a asp-controller="Account" asp-action="Login">send me back</a> to the sign in screen.
                </div>
            </form>
        </div>
    </div>
</div>