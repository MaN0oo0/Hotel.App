
@model CustomerVM
@{
    ViewData["Title"] = "Details";
}
  <h2>Details  : @Model.Name  </h2>
<form asp-controller="Customer" asp-action="Details" class="form-group">





    <input type="hidden" asp-for="Id" />

   
   

    <label asp-for="Name">Name</label>
    <input type="text" class="form-control" asp-for="Name" readonly />
    <br />

    <label asp-for="PhoneNumber">PhoneNumber</label>
    <input type="text" class="form-control" asp-for="PhoneNumber" readonly />
    <br />

    <label asp-for="NationalNumber">NationalNumber</label>
    <input type="text" class="form-control" asp-for="NationalNumber" readonly />
    <br />

   
        <label asp-for="CreationDate">CreationDate</label>
    <input type="text" class="form-control" asp-for="CreationDate" readonly />
    <br />
    <label asp-for="UpdateDate">UpdateDate</label>
    <input type="text" class="form-control" asp-for="UpdateDate" readonly />
    <br />
        <label asp-for="DeleteDate">DeleteDate</label>
    <input type="text" class="form-control" asp-for="DeleteDate" readonly />
    <br />

 

     <label asp-for="Reception">Reception-Worker</label>
     <select class="form-control" asp-for="ReceptionId" asp-items="(SelectList)ViewBag.CustomerList" readonly>
    </select>
    <br />


    
    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="checked">
        <label asp-for="IsActive">IsActive</label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <center>
      
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-controller="Customer" asp-action="Update" class="btn btn-warning"  asp-route-id="@Model.Id" >Update</a>
 
  <a asp-action="index" asp-controller="Customer" class="btn btn-primary">Return</a>

 </center>
     </form>
      
