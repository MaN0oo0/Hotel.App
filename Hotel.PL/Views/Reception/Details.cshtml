
@model ReceptionVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}
  <h2>Details  : @Model.Name  </h2>
<form asp-controller="Reception" asp-action="Details" class="form-group">





    <input type="hidden" asp-for="Id" />

   
   

    <label asp-for="Name">Name</label>
    <input type="text" class="form-control" asp-for="Name" readonly />
    <br />

    <label asp-for="Salary">Salary</label>
    <input type="text" class="form-control" asp-for="Salary" readonly />
    <br />

    <label asp-for="DOB">Date-Of-Birth</label>
    <input type="text" class="form-control" asp-for="DOB" readonly />
    <br />

        <label asp-for="Address">Address</label>
    <input type="text" class="form-control" asp-for="Address" readonly />
    <br />
    
        <label asp-for="CreationDate">CreationDate</label>
    <input type="text" class="form-control" asp-for="CreationDate" readonly />
    <br />
    <label asp-for="UpdateDate">UpdateDate</label>
    <input type="text" class="form-control" asp-for="UpdateDate" readonly />
    <br />
        <label asp-for="DeleteDate">DeleteDate</label>
    <input type="text" class="form-control" asp-for="DeleteDate" readonly />
    <br />

 
